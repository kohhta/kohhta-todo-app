.article
  %h1.article_title
    = @board.title
  .article_detail
    = image_tag 'Oval4.svg'
    %div
      - if @board.user.present?
        %p= @board.user.display_name
    - if user_signed_in? && current_user. boards.exists?(id: @board.id)
      .article_detail_actions
        .dropdown
          = image_tag 'actions.svg',class: 'dropbtn'
          .dropdown-content.mini
            = link_to '編集する' , edit_board_path(@board)
            = link_to '削除する' , board_path(@board), data: { method: 'delete', confirm: '本当に削除しますか？'}
  .article_content
    = @board.content
