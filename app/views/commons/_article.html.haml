= link_to article_path(article) do
  .card
    - if article.eyecatch.attached?
      .card_image
        = image_tag article.eyecatch
    .card_content
      .card_title
        = article.title
      .card_heart
      .card_detail
        = image_tag 'Oval4.svg'
        %div
          %p= article.author_name
